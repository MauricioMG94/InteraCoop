@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout>
    <MudAppBar style="background-color: #375A89" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5" Class="ml-3">InteraCoop</MudText>
        <MudSpacer />
        <AuthLinks />
    </MudAppBar>
    
    <MudDrawer Style="background-color: #4679BD" @bind-Open="@open" ClipMode="DrawerClipMode.Always" Breakpoint="@breakpoint" PreserveOpenState="@preserveOpenState" Elevation="1" Variant="@DrawerVariant.Mini">
            <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <article class="content px-4">
            @Body
        </article>
    </MudMainContent>
</MudLayout>


@code {
    bool open = true;
    bool preserveOpenState = false;
    Breakpoint breakpoint = Breakpoint.Lg;
    DrawerClipMode clipMode = DrawerClipMode.Never;

    void ToggleDrawer()
    {
        open = !open;
    }
}