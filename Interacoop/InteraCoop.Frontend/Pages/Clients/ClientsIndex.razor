@page "/clients"

<h3>Clientes</h3>
<div class="mb-3">
    <a href="/create/client" class="btn btn-primary">Nuevo client</a>
</div>

<div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
    <div>
        <input style="width: 400px;" type="text" class="form-control" id="titulo" placeholder="Buscar por nombre..." @bind-value="Filter" />
    </div>
    <div class="mx-1">
        <button type="button" class="btn btn-outline-primary" @onclick="ApplyFilterAsync"><i class="bi bi-funnel" /> Filtrar</button>
        <button type="button" class="btn btn-outline-danger" @onclick="CleanFilterAsync"><i class="bi bi-x-circle" /> Limpiar</button>
    </div>
</div>
<Pagination CurrentPage="currentPage"
            TotalPages="totalPages"
            SelectedPage="SelectedPageAsync"
            RecordNumber="SelectedRecordsNumberAsync" />

<GenericList MyList="Clients">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Tipo de documento</th>
                    <th>Documento</th>
                    <th>Telefono</th>
                    <th>Direccion</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Clients!)
                {
                    <tr>
                        <td>@client.Name</td>
                        <td>@client.DocumentType</td>
                        <td>@client.Document</td>
                        <td>@client.Telephone</td>
                        <td>@client.Address</td>
                        <td>
                            <a href="/client/edit/@client.Id" class="btn btn-warning">Editar</a>
                            <button @onclick=@(()=> DeleteAsync(client)) class="btn btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>
