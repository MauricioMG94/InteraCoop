@page "/interactions"

<div class="card">
    <div class="card-header">
        <span>
            <i class="oi oi-star"></i> Interactions
            <a class="btn btn-sm btn-primary float-end" href="/opportunity/create">
                <i class="oi oi-plus"></i> Nueva Interaccion
            </a>
        </span>
    </div>

    <div class="card-body">
        <div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
            <div>
                <input style="width: 400px;" type="text" class="form-control" id="titulo" placeholder="Buscar por estado..." @bind-value="Filter" />
            </div>
            <div class="mx-1">
                <button type="button" class="btn btn-outline-primary" @onclick="ApplyFilterAsync"><i class="bi bi-funnel" /> Filtrar</button>
                <button type="button" class="btn btn-outline-danger" @onclick="CleanFilterAsync"><i class="bi bi-x-circle" /> Limpiar</button>
            </div>
        </div>
        <Pagination CurrentPage="currentPage"
                    TotalPages="totalPages"
                    SelectedPage="SelectedPageAsync"></Pagination>

        <GenericList MyList="Interactions">

            <Body>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Tipo de Interaccion</th>
                            <th>Fecha de creacion de Interacción</th>
                            <th>Fecha de inicio</th>
                            <th>Fecha fin</th>
                            <th>Direccion</th>
                            <th>Observaciones de Interaccion</th>
                            <th>Oficina</th>
                            <th>Fecha de Auditoria</th>
                            <th>Usuario de Auditoria</th>
                            <th style="width:168px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var interaction in Interactions!)
                        {
                            <tr>
                                <td>
                                    @interaction.Id
                                </td>
                                <td>
                                    @interaction.InteractionType
                                </td>
                                <td>
                                    @interaction.InteractionCreationDate
                                </td>
                                <td>
                                    @interaction.StartDate
                                </td>
                                <td>
                                    @interaction.Address
                                </td>
                                 <td>
                                    @interaction.ObservationsInteraction
                                </td>
                                 <td>
                                    @interaction.Office
                                </td>
                                 <td>
                                    @interaction.AuditDate
                                </td>
                                 <td>
                                    @interaction.AuditUser
                                </td>
                                <td>
                                    @if (interaction.ClientsList != null)
                                    {
                                        @foreach (var Client in interaction.ClientsList)
                                        {
                                            <span>@Client.Name</span>

                                            <br />
                                        }
                                    }
                                </td>
                                <td>
                                    <a href="/interaction/edit/@interaction.Id" class="btn btn-warning btn-sm">
                                        <i class="oi oi-pencil"></i> Editar
                                    </a>
                                    <button class="btn btn-danger btn-sm" @onclick="@(() => Delete(interaction.Id))">
                                        <i class="oi oi-trash"></i> Borrar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </Body>
        </GenericList>
    </div>
</div>
