@page "/opportunityReports"

<div class="card">
    <div class="card-header">
        <span>
            <MudButton StartIcon="@Icons.Material.Filled.LibraryBooks" Variant="Variant.Text" Color="Color.Default" Size="Size.Large">Reporte de Oportunidades</MudButton>
        </span>
    </div>
    <div class="card-body">
        <div class="card-filter">
@*             <MudText Typo="Typo.h6">Reportes</MudText>
 *@            <Filter PlaceHolder="Estado de oportunidad" Callback=@FilterCallBack OptionsList="OpportunityStatus" />
        </div>
        <GenericList MyList="Reports">
            <Body>
                <div class="table-container container-fluid">
                    <table class="table table-hover">
                        <thead>
                            <tr class="table-secondary table-header table-row">
                                <th class="col-1" style="width: 33.33%">Total</th>
                                <th class="col-2" style="width: 33.33%">Nombre Funcionario</th>
                                <th class="col-3" style="width: 33.33%">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Reports!)
                            {
                                <tr class="table-row">
                                    <td class="col-1" style="width: 33.33%">
                                        @report.TypeCount
                                    </td>
                                    <td class="col-2" style="width: 33.33%">
                                        @report.FullName
                                    </td>
                                    <td class="col-3" style="width: 33.33%">
                                        <span class="badge text-bg-primary" style="@GetBadgeStyle(report.Type)">
                                            @report.Type
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </Body>
        </GenericList>
        <Pagination CurrentPage="currentPage"
                    TotalPages="totalPages"
                    SelectedPage="SelectedPageAsync"
                    RecordNumber="SelectedRecordsNumberAsync" />
    </div>
</div>