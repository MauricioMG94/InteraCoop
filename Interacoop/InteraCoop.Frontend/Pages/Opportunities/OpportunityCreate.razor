@page "/interaction/opportunity/create/{InteractionId:int}"

@if (loading)
{
    <Loading />
}
else
{
    <OpportunityForm @ref="opportunityForm" 
        Opportunity="opportunity" 
        OnValidSubmit="CreateAsync" 
        ReturnAction="Return" 
        InteractionId="InteractionId"
        FormName="Crear oportunidad"
        CardName="Nueva Oportunidad"/>
}