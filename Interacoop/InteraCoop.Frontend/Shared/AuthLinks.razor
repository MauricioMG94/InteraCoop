<AuthorizeView>
    <Authorized>
        <span class="d-flex align-items-center">
            Hola, <a href="EditUser" class="nav-link btn btn-link">@context.User.Identity!.Name</a>
        </span>        
        @if (!string.IsNullOrEmpty(photoUser))
        {
            <div class="mx-2">
                <img src="@photoUser" width="50" height="50" style="border-radius:50%" />
            </div>
        }
        <a href="Logout" class="nav-link btn btn-link">Cerrar sesion</a>
    </Authorized>
    <NotAuthorized>
@*         <MudButton Href="Register" Variant="Variant.Filled" Color="Color.Transparent" Style="color:white">Registro</MudButton>
 *@        <MudButton Href="Login" Variant="Variant.Filled" Color="Color.Transparent" Style="color:white; margin-left: 1rem">Iniciar Sesión</MudButton>
    </NotAuthorized>
</AuthorizeView>
