@page "/opportunity/edit/{OpportunityId:int}"

@if (loading)
{
    <Loading />
}
else
{
    <OpportunityForm @ref="opportunityForm" 
        Opportunity="opportunityDto" 
        selectedOpportunities="selectedOpportunities" 
        nonSelectedOpportunities="nonSelectedOpportunities" 
        OnValidSubmit="SaveChangesAsync" 
        ReturnAction="Return"
        FormName="Editar oportunidad"/>
}